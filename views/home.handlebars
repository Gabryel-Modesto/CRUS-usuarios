<div class="container">
  {{#each users}}
    <div class="item">
      <h2>{{this.name}}</h2>
      <p>{{this.occpation}}</p>
      <div class="actions">
        <a href="/users/{{this.id}}" class="BtnDetails">Ver detalhes</a>
        <a href="/users/edit/{{this.id}}" class="BtnEditar">Editar</a>
        <form action="/users/delete/{{this.id}}" method="POST">
          <input type="submit" value="Excluir" class="BtnExcluir">
        </form>
      </div>
    </div>
  {{/each}}
</div>